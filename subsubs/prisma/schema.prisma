generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model SubtitleHistory {
  id          String   @id @default(cuid())
  title       String
  year        String?
  imdbId      String?
  subtitleId  String
  language    String
  downloadUrl String
  fileName    String
  downloadedAt DateTime @default(now())
  
  @@map("subtitle_history")
}